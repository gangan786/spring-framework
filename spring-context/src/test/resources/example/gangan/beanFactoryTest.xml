<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="staticStu" class="example.gangan.Bo.StuFactory"
		  factory-method="getStaticStu">
		<constructor-arg value="1"/>
	</bean>

	<bean id="stuFactory" class="example.gangan.Bo.StuFactory"/>
	<bean name="dynamicStu" factory-bean="stuFactory" factory-method="getDynamicStu">
		<constructor-arg value="12"/>
	</bean>

</beans>